<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Viva Bem Vitaminas .com" %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :style=>'color:green;background:black', :id => "flash_#{name}" %>
      <% end %>
      
      <%= link_to 'root', :root %>
      <%= link_to 'cart', :current_cart %>

      <hr />
      
      <%= debug APP_CONFIG %>
      
      <hr />

      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
