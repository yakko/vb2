<h1>Listando products</h1>

<% if false %>
  formatos:
  <%= link_to products_path(:format=>'html'), products_path(:format=>'html') %>
  <%= link_to products_path(:format=>'xml'),  products_path(:format=>'xml') %>
  <%= link_to products_path(:format=>'json'), products_path(:format=>'json') %>
  <%= link_to products_path(:format=>'yaml'), products_path(:format=>'yaml') %>
  <%= link_to "#{products_path(:format=>'atom')} (in file app/views/products/index.atom.builder)",  products_path(:format=>'atom') %>
<% end %>

<table border="1">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Text</th>
    <th>Price now</th>
    <th>Price old</th>
    <th>Is hidden</th>
    <th>Is special</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= image_tag product.img, :width=>100 %></td>
    <td><%= product.name %></td>
    <td><%= product.text %></td>
    <td><%= product.price_now %></td>
    <td><%= product.price_old %></td>
    <td><%= product.is_hidden %></td>
    <td><%= product.is_special %></td>
    <td><%= link_to 'Ver', product %></td>
    <td><%= link_to 'Editar', edit_product_path(product) %></td>
    <td><%= link_to 'Remover', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Product', new_product_path %>
